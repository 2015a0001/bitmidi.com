{
  "name": "nodefoo.com",
  "description": "Node.js documentation for everyone!",
  "version": "0.0.0",
  "author": {
    "name": "Feross Aboukhadijeh",
    "email": "feross@feross.org",
    "url": "http://feross.org"
  },
  "babel": {
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "browser": {
    "./secret/index.js": false
  },
  "bugs": {
    "url": "https://github.com/feross/nodefoo.com/issues"
  },
  "dependencies": {
    "choo": "^5.6.2",
    "compression": "^1.6.2",
    "connect-sqlite3": "^0.9.9",
    "debug": "^2.6.8",
    "downgrade": "^1.1.1",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "memo-async-lru": "^1.0.1",
    "nanologger": "^1.1.0",
    "opbeat": "^4.14.0",
    "tachyons": "^4.7.4",
    "unlimited": "^1.2.0"
  },
  "devDependencies": {
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babelify": "^7.3.0",
    "babili": "^0.1.3",
    "browserify": "^14.4.0",
    "bundle-collapser": "^1.2.1",
    "git-pull-or-clone": "^1.1.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.11.0",
    "path-exists": "^3.0.0",
    "rimraf": "^2.6.1",
    "standard": "*",
    "unassertify": "^2.0.4",
    "watchify": "^3.9.0",
    "yo-yoify": "^3.7.3"
  },
  "homepage": "https://nodefoo.com",
  "license": "-",
  "main": "server/index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/feross/nodefoo.com.git"
  },
  "scripts": {
    "build": "npm run build-js && chmod 777 db/",
    "build-js": "browserify -t babelify -g yo-yoify -g unassertify -p bundle-collapser/plugin src | babili > static/bundle.js",
    "generate": "DEBUG=* node ./bin/generate.js",
    "secret-download": "rsync -a -O -v --delete -e \"ssh -p 44444\" feross@future:\"/home/feross/www/nodefoo.com/secret/\" secret/",
    "secret-upload": "rsync -a -O -v --delete -e \"ssh -p 44444\" secret/ feross@future:\"/home/feross/www/nodefoo.com/secret/\"",
    "size": "npm run size-css && npm run size-js",
    "size-css": "cat node_modules/tachyons/css/tachyons.min.css static/style.css | gzip | wc -c",
    "size-js": "npm run build-js && cat static/bundle.js | gzip | wc -c",
    "start": "node server",
    "test": "standard && tape test/*.js",
    "watch": "npm run watch-js & npm run watch-server",
    "watch-js": "watchify src -d -v -o static/bundle.js",
    "watch-server": "DEBUG=nodefoo* nodemon server -e js,css,ejs -i static/ -i src/"
  }
}
